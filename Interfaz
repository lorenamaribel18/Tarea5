    private void btnbuscarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        String nombre = txtnombre.getText().trim();
        String ID = txtid.getText().trim();
        String Fecha = txtfecha.getText().trim();
        String direccion = txtdireccion.getText().trim();
        String telefono = txttelefono.getText().trim();


        DefaultTableModel model = (DefaultTableModel) tabla.getModel();
        model.setRowCount(0); // Limpia las filas existentes en la tabla

        for (String[] registro : registros) {
            if ((nombre.isEmpty() || registro[0].equalsIgnoreCase(nombre))) {
                txtid.setText(registro[1]);
                txtfecha.setText(registro[2]);
                txtdireccion.setText(registro[3]);
                txttelefono.setText(registro[4]);
                model.addRow(registro);
                encontrado = true;
                break;
            }else{
                JOptionPane.showMessageDialog(this, "Paciente no encontrado");

            }
        }  
                         
    }                                         

    private void btnagregarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        String nombre = txtnombre.getText().trim();
        String ID = txtid.getText().trim();
        String Fecha = txtfecha.getText().trim();
        String direccion = txtdireccion.getText().trim();
        String telefono = txttelefono.getText().trim();

          // Verifica que todos los campos estén completos antes de agregar el registro
        if (!nombre.isEmpty() && !ID.isEmpty() && !Fecha.isEmpty() && !direccion.isEmpty()&& !telefono.isEmpty()){
            String[] nuevoRegistro = {nombre, ID, Fecha, direccion, telefono};
            registros.add(nuevoRegistro);
            
            // Agrega el registro a la tabla
            DefaultTableModel model = (DefaultTableModel) tabla.getModel();
            model.addRow(nuevoRegistro);
        } else {
            JOptionPane.showMessageDialog(this, "Por favor, complete todos los campos.");
        }
    }                                          

    private void btnmostrarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        DefaultTableModel model = (DefaultTableModel) tabla.getModel();
        model.setRowCount(0);

        // Agrega todos los registros de la lista a la tabla
        for (String[] registro : registros) {
            model.addRow(registro);
        }
    }                                          

    private void btneliminarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        int selectedRow = tabla.getSelectedRow();//obtiene la fila seleccionada en la tabla
        
        if (selectedRow >= 0) {
            DefaultTableModel model = (DefaultTableModel) tabla.getModel();
            registros.remove(selectedRow);// Elimina el registro de la lista
            model.removeRow(selectedRow);// Elimina el registro de la tabla
        } else {
            JOptionPane.showMessageDialog(this, "Seleccione una fila para eliminar.");
        }
        
    
    }                                           


